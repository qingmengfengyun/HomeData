    family: "Monaco"
    style: "Regular"
  bold:
    family: "MonacoB"
    style: "Bold"
  italic:
    family: "Monaco"
    style: "Italic"
  bold_italic:
    family: "JetBrainsMono Nerd Font" # becasue monao series haven't bold&italic
    style: "Bold Italic"
